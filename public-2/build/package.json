{
	"private": true,
	"description": "Tools to build our assets (css, js)",
	"main": "gulpfile.js",
	"devDependencies":
	{
		"del": "0.1.3",
		"merge-stream": "0.1.6",
		"yargs": "1.3.1",

		"gulp": "3.8.10",
		"gulp-strip-comments": "1.0.0",
		"gulp-util": "3.0.1",
		"gulp-concat": "2.4.1",
		"gulp-debug": "1.0.1",
		"gulp-buster" : "1.0.0",
		"gulp-changed" : "1.0.0",

		"gulp-sass": "1.2.4",
		"gulp-autoprefixer": "2.0.0",
		"gulp-minify-css": "0.3.10",
		"gulp-group-css-media-queries": "1.0.0",
		"gulp-css-cache-bust": "0.0.7",
		"gulp-pixrem": "0.1.1",
		"gulp-uglify" : "1.0.1"
