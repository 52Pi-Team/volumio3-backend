env:
  node: true
  browser: true

rules:
  brace-style: 2
  comma-spacing: 1
  eol-last: 0
  indent: [2, 2]
  key-spacing: 0
  new-parens: 2
  no-debugger: 2
  no-dupe-args: 2
  no-dupe-keys: 2
  no-duplicate-case: 2
  no-ex-assign: 2
  no-extra-parens: 1
  no-fallthrough: 2
  no-multi-spaces: [2, { exceptions: { "ObjectExpression": true } }]
  no-reserved-keys: 2
  no-unreachable: 2
  padded-blocks: [2, "never"]
  quotes: [2, "single", "avoid-escape"]
  semi: 2
  space-after-keywords: 2
  space-before-blocks: 2
  space-before-function-paren: [2, "never"]
  space-infix-ops: 2
  space-return-throw-case: 2
  spaced-line-comment: 2
  strict: 0
  valid-typeof: 2

ecmaFeatures:
  blockBindings: true