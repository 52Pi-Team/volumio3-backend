{
  "page": {
    "label": "System"
  },
  "sections": [
    {
      "id": "section_general_settings",
      "element": "section",
      "label": "General Settings",
      "onSave": {"type":"controller", "endpoint":"system_controller/system", "method":"saveGeneralSettings"},
      "saveButton": {
        "label": "Save",
        "data": [
          "player_name",
          "startup_sound"
        ]
      },
      "content": [
        {
          "id": "player_name",
          "type":"text",
          "element": "input",
          "label": "Player Name",
          "value": "volumio"
        },
        {
          "id":"startup_sound",
          "element": "switch",
          "label": "Startup Sound",
          "value": true
        }

      ]
    },
    {
      "id": "section_sound_quality",
        "type": "section",
        "label": "Sound quality tweaks",
        "onSave": {"type":"controller", "endpoint":"system_controller/system", "method":"saveSoundQuality"},
        "saveButton": {
          "label": "Save",
          "data": [
            "kernel_profile"
          ]
        },
        "text": "These profiles??.",
        "content": [
          {
            "id": "kernel_profile",
            "element": "select",
            "label": "Kernel profile",
            "value":  {
                "value":"1",
                "label": "Default"
              },
              "options": [
                {
                  "value":"1",
                  "label": "Default"
                },
                {
                  "value":"2",
                  "label": "Less Jitter"
                }, {
                  "value":"3",
                  "label": "Jitter"
                }, {
                  "value":"4",
                  "label": "Focus"
                }
              ]

          }
        ]

    },
    {
      "id":"section_updates",
        "type": "section",
        "label": "System updates",
        "content": [
          {
            "id":"update",
              "element": "button",
              "label": "System updates",
              "description": "Check if newer versions of the system are available",
              "onClick": {"type":"emit", "message":"updateCheck", "data":"search-for-upgrade"}
          },
          {
            "id":"factory",
              "element": "button",
              "label": "Factory Settings",
              "askForConfirm": {"title": "Confirm Factory Reset", "message": "This will reset your device to factory settings, all your settings will be lost. Do you want to continue?"},
              "description": "Reset your System to factory Settings",
              "onClick": {"type":"emit", "message":"factoryReset", "data":" "}
          }
        ]

    }
  ]
}
